<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/line_examination"
        android:layout_width="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_examination"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/write_press"/>
        <TextView
            android:id="@+id/text_examination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/app_color"
            android:text="试题类别"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_communication"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_communication"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/communication_false"/>

        <TextView
            android:id="@+id/text_communication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/menu_tip_text_color"
            android:text="社区"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_person"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_person"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/person_false"/>
        <TextView
            android:id="@+id/text_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/menu_tip_text_color"
            android:text="个人中心"/>
    </LinearLayout>
</LinearLayout>
