<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--提示的dialog-->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="communication">
        <item name="android:background">@drawable/write_communication</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="login_edittext_style">
        <item name="android:textColorHint">#999999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">25px</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:layout_marginTop">25px</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--登陆按钮-->
    <style name="BtnLoginTheme" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">21sp</item>
    </style>
    <!--个人信息编辑界面使用-->
    <style name="UserinfoTextTheme">
        <item name="android:textColor">#444444</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="EditUserinfoTextTheme">
        <item name="android:textColor">#555555</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
    <style name="Add20HuabiTheme">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#22bfe8</item>
    </style>
    <!--记录基本的editText显示-->
    <style name="base_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#787878</item>
        <item name="android:background">@null</item>
    </style>
    <style name="base_border_editText" parent="base_editText">
        <item name="android:textColorHint">#a0a0a0</item>
        <item name="android:background">@drawable/common_layout_normal_with_corner</item>
        <item name="android:padding">3dp</item>
    </style>
</resources>
